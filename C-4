#include <bits/stdc++.h>

using namespace std;

int main()
{
    int a,b,c;
    cin>>a>>b>>c;
    int d;
    float x1,x2;
    float real,img;
    d=(pow(b,2)-(4*a*c));
    if(d==0)
    {
        x1= -b/(2.0 * a) ;
        x1=x2;

        cout<<"Roots:"<<x1<<endl;
    }
    else if ( d>0)
    {
        x1= (-b) + (sqrt(d))/(2.0 * a);
        x2= (-b) - (sqrt(d))/(2.0 * a);

        cout<<"Roots:"<<x1<<","<<x2<<endl;
    }

    else
    {
        real= -b/(2.0 * a);
        img= (sqrt(-d)/2.0 *a);

        cout<<real<<"+"<<img<<"i"<<endl;
        cout<<real<<"-"<<img<<"i";
    }
    return 0;
}
